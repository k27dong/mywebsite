---
import { getCollection, render, type CollectionEntry } from "astro:content"

import Callout from "@/components/Callout.astro"
import Prose from "@/components/Prose.astro"
import MainLayout from "@/layouts/MainLayout.astro"

type Post = CollectionEntry<"posts">

export async function getStaticPaths() {
  const posts: Post[] = await getCollection("posts", ({ data }) => {
    return !data.disabled
  })
  return posts.map((post: Post) => ({
    params: { slug: post.id },
    props: post,
  }))
}

const post = Astro.props as Post
const { title, displaytitle, date } = post.data
const { Content } = await render(post)

const full_date = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
})
---

<MainLayout title={displaytitle || title} tab_title={title}>
  <Callout slot="callout">
    {full_date}
  </Callout>

  <article class="w-full max-w-[1000px] px-[1.5rem] pb-24 sm:mx-auto md:px-24 lg:px-16">
    <Prose>
      <Content />
    </Prose>
  </article>
</MainLayout>
