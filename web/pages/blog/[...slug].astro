---
import { type CollectionEntry, getCollection } from "astro:content"
import MainLayout from "../../layouts/MainLayout.astro"
import Prose from "../../components/Prose.astro"

type Props = CollectionEntry<"posts">

export async function getStaticPaths() {
  const posts = await getCollection("posts", ({ data }) => {
    return !data.disabled
  })
  return posts.map((post: Props) => ({
    params: { slug: post.slug },
    props: post,
  }))
}

const { title, displaytitle, date } = Astro.props.data as Props["data"]
const { Content } = await Astro.props.render()
const full_date = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
})
---

<MainLayout title={displaytitle || title} callout={full_date} tab_title={title}>
  <article class="px-[1.2rem] pb-24 sm:px-[6rem]">
    <div class="font-article font-normal leading-7">
      <Prose>
        <Content />
      </Prose>
    </div>
  </article>
</MainLayout>
