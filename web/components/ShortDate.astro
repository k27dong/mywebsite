---
interface Props {
  date: Date
}

const { date } = Astro.props
const formated_date = date.toLocaleDateString("en-US", {
  year: "2-digit",
  month: "2-digit",
  day: "2-digit",
})
const [month, _, year] = formated_date.split("/")
---

<time datetime={date.toISOString()}>
  {year}Â·{month}
</time>
